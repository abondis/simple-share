html(ng-app="simpleShare")
  head
    //- include angularjs
    script(src='bower_components/angular/angular.js')
    script(src='bower_components/angular-route/angular-route.js')
    script(src='bower_components/angular-resource/angular-resource.js')
    script(src='/static/js/app.js')
    base(href="/")
  body(ng-controller="MainController")
    ng-view
      | Loading ...
    script(type='text/ng-template', id='home.html')
      a(href="/files") Files
    script(type='text/ng-template', id='files.html')
      base(href="/files")
      a(href="/") Home
      | [[files]]
      | [[$location.path()]]
      div
        a(ng-if="$location.path() != '/files'", href="[[$location.path()]]/..") ..
      div(ng-repeat="dir in files.dirs")
        a(href="[[$location.path()]]/[[dir]]") [[dir]]
      div(ng-repeat="file in files.files")
        a(href="#") [[file]]
